@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Areas/Identity/Pages/Account/Shared/_LayoutLogin.cshtml"; 
}

<div id="signin-form">
    <div class="title-sign d-flex justify-content-center align-items-center">@ViewData["Title"]</div>
    <section class="main-content">
        <form class="w-100" method="post">
            <div class="field-signin d-flex justify-content-center align-items-center">
                <div class="w-100">
                    <div class="email-signin d-flex g-3 align-items-center mb-4">
                        <div class="col-xl-5 col-lg-5 col-md-4 col-sm-4 col-4 px-2 text-end">
                            <label asp-for="Input.Email" for="email-signin" class="txt-login col-form-label">Email Address</label>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-5 col-sm-8 col-8 position-relative px-2 pe-0">
                            <div class="grp-input">
                                <div asp-validation-summary="ModelOnly" class="alert-incorrect position-absolute text-danger" role="alert"></div>
                                <input asp-for="Input.Email" id="email-signin" type="text" class="border-0 w-100 input-data" placeholder="Please enter your email" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="alert-required position-absolute text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 pw-signin d-flex g-3 align-items-center">
                        <div class="col-xl-5 col-lg-5 col-md-4 col-sm-4 col-4 px-2 text-end">
                            <label asp-for="Input.Password" for="password" class="txt-login col-form-label">Login Password</label>
                        </div>
                        <div class="col-xl-3 col-lg-3 col-md-5 col-sm-8 col-8 position-relative px-2 pe-0">
                            <div class="grp-input-icon grp-pw">
                                <input asp-for="Input.Password" id="password" type="password" class=" w-100 input-data" placeholder="Please enter your password" aria-required="true">
                                <i class="fa-regular fa-eye-slash" onclick="ChangeInputType()"></i>
                                @*position-absolute: đi chung position-relative không xâm phạm treo lơ lửng*@
                                <span asp-validation-for="Input.Password" class="alert-required position-absolute text-danger text-danger"></span>
                                <a class="forgot-pw position-absolute" id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="mt-3 text-center">
                <button id="login-submit" type="submit" class="btn btn-sm border-0">Sign In</button>
            </div>
            <div class="text-center mt-2">
                <p>
                    Create an account, Click <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark">here.</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        //Set Focus click mouse in Input id "email-signin"
        document.getElementById("email-signin").focus();
        document.getElementById("email-signin").value = "";
        document.getElementById("password").value = "";
        //
        function ChangeInputType() {
            if ($("#password").prop("type") == "password") {
                $("#password").prop("type", "text");
                $(".grp-pw i").prop("class", "fa-regular fa-eye");
            } else {
                $("#password").prop("type", "password");
                $(".grp-pw i").prop("class", "fa-regular fa-eye-slash");
            }
        }
    </script>
}
