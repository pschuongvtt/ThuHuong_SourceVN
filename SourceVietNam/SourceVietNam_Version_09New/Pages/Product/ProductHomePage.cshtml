@page "/HomePage"
@model SourceVietNam_Version_09New.Pages.Product.ProductHomePageModel
@{
    ViewData["Title"] = "Product Homepage";
}
<div class="product-homepage">
    <div class="banner-prod-home full-width">
        <div class="w-100">
            <nav class="d-flex justify-content-center">
                <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
                    <button class="title-size active mx-5" id="nav-product-tab" data-bs-toggle="tab" data-bs-target="#nav-product" type="button" role="tab" aria-controls="nav-product" aria-selected="true">Products</button>
                    <button class="title-size mx-5" id="nav-manufacturers-tab" data-bs-toggle="tab" data-bs-target="#nav-manufacturers" type="button" role="tab" aria-controls="nav-manufacturers" aria-selected="false">Manufacturers</button>
                </div>
            </nav>
            <div class="d-flex justify-content-center mt-4 ">
                <div class="input-group d-flex w-50">
                    <div class="input-icon-container">
                        <input id="search-main" type="text" class="border-0" placeholder="Search here..." />
                        <i class="fa-regular fa-magnifying-glass"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="tab-content" id="nav-tabContent">
        @*Products*@
        <div class="tab-pane fade show active" id="nav-product" role="tabpanel" aria-labelledby="nav-product-tab">
            <div class="section-background full-width">
                <div class="container space-section">
                    @*Carousel*@
                    <div id="carouselTopBanner" class="carousel slide space-prop" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselTopBanner" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselTopBanner" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselTopBanner" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            <button type="button" data-bs-target="#carouselTopBanner" data-bs-slide-to="3" aria-label="Slide 4"></button>
                            <button type="button" data-bs-target="#carouselTopBanner" data-bs-slide-to="4" aria-label="Slide 5"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/slide/slide1.jpg" class="d-block w-100" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide/slide2.jpg" class="d-block w-100" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide/slide3.jpg" class="d-block w-100" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide/slide4.jpg" class="d-block w-100" />
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/slide/slide5.jpg" class="d-block w-100" />
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselTopBanner" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselTopBanner" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    @*CATEGORIES*@
                    <div class="prod-categories">
                        <div class="title-svn d-flex justify-content-between">
                            <div class="title-cat">CATEGORIES</div>
                            <div class="d-none d-lg-block d-xl-block ms-auto"><a href="#" class="gray-normal view-more size-20">View more <i class="fa-solid fa-chevrons-right ms-1"></i></a> </div>
                            <div class="d-block d-xl-none d-lg-none ms-auto"><a href="#" class="gray-normal view-more"><i class="fa-solid fa-chevron-right"></i></a> </div>
                        </div>
                        <div class="list-categories">
                            <ul class="col-lg-12 col-md-12 col-sm-12 col-12 row mb-0 mx-0 px-0 g-4">
                                @for (int i = 0; i < 24; i++)
                                {
                                    <li class="col-lg-1 col-md-3 col-sm-5 col-5 cat-item">
                                        <a href="#">
                                            <div class="col-lg-12 col-md-12 col-sm-12 cat-detail">
                                                <div class="categories-img col-lg-12 col-md-4 col-sm-4 my-auto order-1">
                                                    <img src="~/img/categories/cat1.jpg" class="d-block" />
                                                </div>
                                                <div class="col-lg-12 col-md-8 col-sm-8 categories-name color-normal text-center size-10 order-0">Men clothes</div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            @*TOP VIEWS*@
            <div class="prod-top-views space-section">
                <div class="title-svn d-flex justify-content-between">
                    <div class="title-cat">TOP VIEWS</div>
                    <div class="d-none d-lg-block d-xl-block ms-auto"><a href="#" class="gray-normal view-more size-20">View more <i class="fa-solid fa-chevrons-right ms-1"></i></a> </div>
                    <div class="d-block d-xl-none d-lg-none ms-auto"><a href="#" class="gray-normal view-more"><i class="fa-solid fa-chevron-right"></i></a> </div>
                </div>
                <div class="list-topviews">
                    <ul class="col-lg-12 col-md-12 col-sm-12 col-12 row mb-0 mx-0 px-0 g-4">
                        @for (int i = 0; i < 6; i++)
                        {
                            <li class="col-lg-2 col-md-3 col-sm-5 col-5 topviews-item">
                                <a href="#">
                                    <div class="topviews-detail">
                                        <div class="prod-top-img">
                                            <img src="~/img/products/topview1.png" class="d-block w-100" />
                                        </div>
                                        <div class="top-group-info">
                                            <div class="price-topviews color-normal text-center size-20">$3.40</div>
                                            @{
                                                var txt = "Trending now";
                                                if (i % 2 == 0)
                                                {
                                                    txt = "-10%";
                                                }
                                            }
                                            <span class="discount-tag background-svn">@txt</span>
                                        </div>
                                        <div class="top-prod-quantity gray-normal">MOQ: 10 bag/bags</div>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
            <div class="section-background full-width">
                <div class="container space-section">
                    @*Banner left-right*@
                    <div class="w-100 banner-left-right space-prop row mx-0">
                        <a href="#" class="banner-left w-50 ps-0"><img src="~/img/banner/banner1-636x120.png" class="w-100 d-block" /></a>
                        <a href="#" class="banner-right w-50 pe-0"><img src="~/img/banner/banner2-636x120.png" class="w-100 d-block" /></a>
                    </div>
                    @*ALL PRODUCTS*@
                    <div class="space-prop">
                        <div class="title-svn">
                            <div class="title-cat">ALL PRODUCTS</div>
                        </div>
                        <div class="list-products">
                            <ul class="col-lg-12 col-md-12 col-sm-12 col-12 row mb-0 mx-0 px-0 g-4">
                                @for (int i = 0; i < 48; i++)
                                {
                                    <li class="col-lg-2 col-md-3 col-sm-6 col-6 product-item">
                                        <a href="#">
                                            <div class="product-detail">
                                                <div class="prod-img position-relative">
                                                    <img src="~/img/products/sp1.png" class="w-100 d-block" />
                                                    <div class="quote-tag position-absolute w-100 text-center">
                                                        <span class="get-quote"><i class="fa-solid fa-messages me-2"></i>Get Quote</span>
                                                    </div>
                                                </div>
                                                <div class="prod-info">
                                                    <div class="prod-name color-normal">Original Perfume Oud Wood eau de parfum Long time ...</div>
                                                    <div class="prod-price color-svn">$0.21 ~ $0.65</div>
                                                    <div class="prod-quantity gray-normal">MOQ: 1000 pieces</div>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    @*PAGING*@
                    <div class="paging w-100">
                        <ul class="list-page d-flex justify-content-end">
                            <li class="item-page"><a class="" href="#">Next page</a></li>
                            <li class="item-page active"><a class="" href="#">1</a></li>
                            <li class="item-page"><a class="" href="#">2</a></li>
                            <li class="item-page"><a class="" href="#">3</a></li>
                            <li class="item-page"><a class="" href="#">...</a></li>
                            <li class="item-page"><a class="" href="#">Last page</a></li>
                        </ul>
                    </div>

                </div>

            </div>
        </div>
        @*Manufacturers*@
        <div class="tab-pane fade" id="nav-manufacturers" role="tabpanel" aria-labelledby="nav-manufacturers-tab">manufacturers</div>
    </div>

</div>

<script>

</script>